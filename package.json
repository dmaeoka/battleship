{
	"name": "battleship",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"build:analyze": "tsc && vite build --mode analyze",
		"lint": "eslint .",
		"preview": "vite preview",
		"prettier": "prettier --write \"**/*.{ts,tsx,css,html,xml,js,jsx,mjs,json,md,yaml,yml}\"",
		"analyze": "npx vite-bundle-analyzer dist",
		"size-check": "npm run build && bundlesize"
	},
	"bundlesize": [
		{
			"path": "./dist/assets/*.js",
			"maxSize": "500kb",
			"compression": "gzip"
		}
	],
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@fontsource/roboto": "^5.2.6",
		"@mui/icons-material": "^7.2.0",
		"@mui/material": "^7.2.0",
		"motion": "^12.23.9",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"styled-components": "^6.1.19"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"bundlesize": "^0.18.2",
		"eslint": "^9.30.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.4",
		"vite-bundle-analyzer": "^1.1.0"
	}
}
